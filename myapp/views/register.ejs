<!DOCTYPE html>
<html>

<head>
    <title>Registro</title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/paper-kit.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

    <%- include('partials/navbar') %>


    <div class="wrapper">
        
        <div class="container col-md-6">
            <h1 class="text-center">Registrate y sé parte</h1>
            <blockquote></blockquote>
            <form action="/users/register" method="POST">
                <div class="form-group input-icons">
                    <i class="fa fa-envelope icon" aria-hidden="true"></i>
                    <input type="email" class="form-control input-field" id="email" placeholder="Dirección de correo electronico"
                    name="email" <% if(typeof old != "undefined"){%> value="<%= old.email %> " <% } %>>
                    <% if(typeof errors != "undefined"){ %>
                        <% if(typeof errors.email != "undefined"){ %>
                            <small class="form-text error-msg"><%= errors.email.msg %></small>
                        <% } %>
                    <% } %>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6 input-icons">
                        <i class="fa fa-unlock-alt icon" aria-hidden="true"></i>
                        <input type="password" class="form-control input-field" id="password" placeholder="Contraseña" name="password">
                        <% if(typeof errors != "undefined"){ %>
                        <% if(typeof errors.password != "undefined"){ %>
                        <small class="form-text error-msg"><%= errors.password.msg %></small>
                        <% } %>
                        <% } %>
                    </div>
                    <div class="form-group col-md-6 input-icons">
                        <i class="fa fa-unlock-alt icon" aria-hidden="true"></i>
                        <input type="password" class="form-control input-field" id="password2" placeholder="Repetí tu contraseña"
                            name="password2">
                        <% if(typeof errors != "undefined"){ %>
                        <% if(typeof errors.password2 != "undefined"){ %>
                        <small class="form-text error-msg"><%= errors.password2.msg %></small>
                        <% } %>
                        <% } %>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Registrarme!</button>

            </form>
        </div>
    </div>
</body>

<!-- JS  -->
<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/popper.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<!-- paper-kit  -->
<script src="/javascripts/paper-kit.min.js"></script>
<!-- paper-kit  -->
<script src="/javascripts/custom.js"></script>

</html>